{
  "$id": "https://raw.githubusercontent.com/jeevangelista/signature-commons-schema/local/meta/library/draft-1.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/jeevangelista/signature-commons-schema/local/core/meta.json"
    },
    {
      "properties": {
        "Access_URL": {
          "description": "The url that this library can be acccessed from.",
          "format": "uri",
          "type": "string"
        },
        "Assay": {
          "description": "Type of assay (TODO: validate against official list)",
          "enum": [
            "amino acid sequence analysis",
            "cell viability",
            "ChIP-seq",
            "computational prediction",
            "DNA sequencing",
            "L1000",
            "literature curation",
            "mass spectrometry",
            "microarray",
            "mining queries",
            "mouse KO phenotyping",
            "RNA-seq",
            "sequence analysis",
            "text mining",
            "various"
          ],
          "type": "string"
        },
        "DOI": {
          "description": "The DOI for this publication",
          "type": "string"
        },
        "Description": {
          "description": "Description of the library",
          "type": "string"
        },
        "Direction": {
          "description": "Tells whether the data are up regulated or down regulated",
          "enum": [
            "up",
            "down"
          ],
          "type": "string"
        },
        "Filename": {
          "description": "Filename of the library",
          "type": "string"
        },
        "Gene_Family": {
          "description": "The gene family of the signatures",
          "type": "string",
          "enum": [
            "Kinases",
            "Transcription factors",
            "phosphatase"
          ]
        },
        "Icon": {
          "description": "Path to the favicon",
          "type": "string"
        },
        "Library_Name": {
          "description": "The name of the library",
          "type": "string"
        },
        "Library_created_by": {
          "description": "Creator of the library",
          "type": "string"
        },
        "Link_to_processing_scripts_on_GitHub": {
          "description": "Link to the script used to process the library",
          "type": "string"
        },
        "Link_to_resource": {
          "description": "Links to library resource",
          "format": "uri",
          "type": "string"
        },
        "Organism": {
          "description": "Scientific name of the source organism of the library",
          "type": "string"
        },
        "Original Source": {
          "description": "Original source of the library",
          "type": "string"
        },
        "PMID": {
          "description": "The PubMed ID for this publication",
          "pattern": "^([0-9]+(; *)?)+$",
          "type": "string"
        },
        "Perturbation_Type": {
          "description": "The type of perturbation",
          "type": "string"
        },
        "Primary_Resource": {
          "description": "Primary resource used",
          "type": "string"
        },
        "Readout": {
          "description": "The readout",
          "type": "string",
          "enum": [
            "mRNA",
            "gene",
            "protein",
            "various"
          ]
        },
        "Spec": {
          "description": "Regex used to mine the metadata from the gmt file",
          "type": "string"
        },
        "Version": {
          "description": "The version of this library (TODO: more formal version format)",
          "type": "string"
        },
        "Weighted": {
          "description": "Whether the signatures are weighted or not (TODO: entire vocabulary for sig type)",
          "enum": [
            "True",
            "False"
          ],
          "type": "string"
        },
        "Year": {
          "description": "Year the library was created",
          "pattern": "[0-9]{4}",
          "type": "string"
        }
      },
      "required": [
        "$validator",
        "Access_URL",
        "Assay",
        "Description",
        "Icon",
        "Library_created_by",
        "Library_name",
        "Link_to_resource",
        "Organism",
        "Original_source",
        "Perturbation_Type",
        "Primary_Resource",
        "Readout",
        "Version"
      ],
      "type": "object"
    }
  ]
}