{
  "$id": "https://raw.githubusercontent.com/jeevangelista/signature-commons-schema/local/core/library.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/jeevangelista/signature-commons-schema/local/core/meta.json"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Globally unique identifier referring to this library."
        },
        "meta": {
          "$ref": "https://raw.githubusercontent.com/jeevangelista/signature-commons-schema/local/core/meta.json",
          "description": "Arbitrary validatable metadata describing the library"
        },
        "dataset": {
          "type": "string",
          "description": "Unique identifier referring to this signature's parent dataset."
        },
        "dataset_type": {
          "type": "string",
          "description": "Unique identifier referring to this signature's parent dataset type.",
          "enum": [
            "geneset_library",
            "rank_matrix"
          ]
        },
        "signatures": {
          "type": "array",
          "description": "List of signatures that make up this library",
          "items": {
            "type": "string",
            "description": "Globally unique identifier referring to the actual signature"
          },
          "Signature_keys": {
            "type": "array",
            "description": "The signature fields of this library.",
            "items": {
              "type": "string",
              "description": "Name of the field"
            }
          }
        },
        "Signature_keys": {
          "type": "object",
          "description": "List of keys available in the signature's metadata",
          "properties": {
            "keys": {
              "type": "list",
              "description": "List of keys available in the signature's metadata",
              "items":{
                "type": "string",
                "description": "Key identifier"
              }
            }
          }
        }
      },
      "required": [
        "id",
        "meta",
        "dataset",
        "dataset_type"
      ]
    }
  ]
}